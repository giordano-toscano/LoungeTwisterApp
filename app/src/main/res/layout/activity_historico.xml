                    <TextView
                        android:id="@+id/menta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cupuaçu: " />

                    <TextView
                        android:id="@+id/cupuacu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor" />

                </LinearLayout>

                <LinearLayout
